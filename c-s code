//       https://color-spiral--AarnaIm.replit.app
import random
import turtle

screen = turtle.Screen()
screen.bgcolor("black")

pen = turtle.Turtle()
pen.speed(0)
colors = ["red", "orange", "yellow", "green", "blue", "purple"]

for i in range(100):
pen.color(random.choice(colors))
pen.circle(i * 2)
pen.left(20)

turtle.done()
